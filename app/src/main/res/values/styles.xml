<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/font_prompt</item>
        <item name="android:windowBackground">@color/colorGreyBright</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="fontFamily">@font/font_prompt</item>
    </style>

    <style name="ProgressHUD" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextStyle.Title" parent="TextStyle">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextStyle.Sub" parent="TextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextStyle.Link" parent="TextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="TextStyle.Error" parent="TextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="TextStyle.Remark" parent="TextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextStyle.Comment" parent="TextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Toolbar" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="Toolbar.Title" parent="TextStyle">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">22sp</item>
    </style>

    <!-- Input theme. -->
    <style name="Input">
        <item name="android:letterSpacing" tools:targetApi="lollipop">.1</item>
        <item name="android:background">@drawable/all_input_bg</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Input.Login" parent="Input">
        <item name="android:padding">@dimen/padding_login_input</item>
        <item name="android:textSize">@dimen/text_size_login_input</item>
    </style>

    <style name="Input.TextError">
        <item name="android:textColor">@color/red</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">.1</item>
        <item name="android:textSize">@dimen/text_size_login_input_error</item>
    </style>

    <!-- Button theme. -->
    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/black_effective</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/all_button_bg</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="Button.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:padding">5dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Button.Primary" parent="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/all_button_primary_bg</item>
    </style>

    <style name="Button.Secondary" parent="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/all_button_secondary_bg</item>
    </style>

    <style name="Card">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@color/white</item>
        <item name="cardCornerRadius">6dp</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="Card.Top" parent="Card">
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="Card.Bottom" parent="Card">
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="Card.Body" parent="Card">
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="Card.List" parent="Card">
        <item name="android:layout_marginBottom">0dp</item>
    </style>


</resources>
