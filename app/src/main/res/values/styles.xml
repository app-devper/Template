<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/font_prompt</item>
        <item name="android:windowBackground">@color/colorGreyBright</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="fontFamily">@font/font_prompt</item>
    </style>

    <style name="ProgressHUD" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.ActionBar.Transparent" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/colorWhite</item>
    </style>

    <style name="AppTheme.TransparentActionBar" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBar.Transparent</item>
    </style>

    <style name="AppTheme.ProgressBar" parent="AppTheme.TransparentActionBar">
        <item name="colorAccent">@color/colorBlueDark</item>
        <item name="android:textColorPrimary">@color/colorBlueDark</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.ProgressBar.White" parent="AppTheme.ProgressBar">
        <item name="android:textColorPrimary">@color/colorWhite</item>
    </style>

    <style name="Text.Primary" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorBlue</item>
    </style>

    <style name="Text.Primary.Bold" parent="Text.Primary">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.à¸ºBlack.Primary" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="Text.Black.Sub" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="Text.GreyDarker.Sub" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorGreyDarker</item>
    </style>

    <style name="Text.Red.Sub" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <style name="Text.Black.Sub.Bold" parent="Text.Black.Sub">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Grey.Sub" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorGrey</item>
    </style>

    <style name="Text.Grey.Sub.Bold" parent="Text.Grey.Sub">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.White.Sub" parent="Text.Grey.Sub">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Title" parent="Text">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.Sub" parent="Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Text.Sub.Black" parent="Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Link" parent="Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Text.Error" parent="Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="Text.Remark" parent="Text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Text.Comment" parent="Text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Toolbar" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="Toolbar.Title" parent="Text">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">22sp</item>
    </style>

    <!-- Input theme. -->
    <style name="Input">
        <item name="android:letterSpacing" tools:targetApi="lollipop">.1</item>
        <item name="android:background">@drawable/all_input_bg</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Input.Login" parent="Input">
        <item name="android:padding">@dimen/padding_login_input</item>
        <item name="android:textSize">@dimen/text_size_login_input</item>
    </style>

    <style name="Input.TextError">
        <item name="android:textColor">@color/red</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">.1</item>
        <item name="android:textSize">@dimen/text_size_login_input_error</item>
    </style>

    <!-- Button theme. -->
    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/black_effective</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/all_button_bg</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="Button.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:padding">5dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Button.Primary" parent="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/all_button_primary_bg</item>
    </style>

    <style name="Button.Secondary" parent="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/all_button_secondary_bg</item>
    </style>

    <style name="Card">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@color/white</item>
        <item name="cardCornerRadius">6dp</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="Card.Top" parent="Card">
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="Card.Bottom" parent="Card">
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="Card.Body" parent="Card">
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="Card.List" parent="Card">
        <item name="android:layout_marginBottom">0dp</item>
    </style>


</resources>
